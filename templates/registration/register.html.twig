{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
			<div class="text-center">
				<h1 class="text-3xl font-extrabold text-gray-900">Create your account</h1>
				<p class="mt-2 text-sm text-gray-600">
					Or
					<a href="{{ path('app_login') }}" class="font-medium text-sky-600 hover:text-sky-500">sign in to your existing account</a>
				</p>
			</div>

			{{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
			{{ form_errors(registrationForm) }}

			<div class="rounded-md shadow-sm space-y-4">
				<div>
					{{ form_label(registrationForm.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					{{ form_widget(registrationForm.username, {'attr': {
                        'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm',
                        'placeholder': 'Username'
                    }}) }}
					{{ form_errors(registrationForm.username) }}
				</div>

				<div>
					{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					{{ form_widget(registrationForm.email, {'attr': {
                        'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm',
                        'placeholder': 'Email address'
                    }}) }}
					{{ form_errors(registrationForm.email) }}
				</div>

				<div>
					{{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					{{ form_widget(registrationForm.plainPassword, {'attr': {
                        'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm',
                        'placeholder': 'Password'
                    }}) }}
					{{ form_errors(registrationForm.plainPassword) }}
				</div>
			</div>

			<div class="flex items-center">
				{{ form_widget(registrationForm.agreeTerms, {'attr': {
                    'class': 'h-4 w-4 text-sky-600 focus:ring-sky-500 border-gray-300 rounded'
                }}) }}
				{{ form_label(registrationForm.agreeTerms, null, {'label_attr': {
                    'class': 'ml-2 block text-sm text-gray-900'
                }}) }}
			</div>

			<div>
				<button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors duration-200">
					Register
				</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
