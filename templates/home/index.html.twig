{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<div class="min-h-screen flex flex-col justify-center items-center p-4">
		<div class="w-full max-w-md p-8 bg-white rounded-lg shadow-[0_20px_50px_rgba(8,_112,_184,_0.1)] hover:shadow-[0_20px_50px_rgba(8,_112,_184,_0.2)] transition-shadow duration-300 mb-10">
			<h1 class="text-3xl font-bold text-sky-600 mb-6 animate-pulse  ">
				Bonjour
			</h1>
			<p class="text-gray-700 mb-2">
				Bienvenue sur notre plateforme sécurisée !
			</p>
			<p class="text-gray-600">
				Connectez-vous pour accéder à votre espace personnalisé.
			</p>
		</div>

		{# Auth buttons with better shadow and hover effects #}
		<div class="flex gap-4">
			<a href="{{ path('app_register') }}" class="px-6 py-2 bg-sky-600 text-white rounded-lg shadow-md hover:shadow-lg hover:bg-sky-700 transition-all duration-300">
				S'inscrire
			</a>
			<a href="{{ path('app_login') }}" class="px-6 py-2 border border-sky-600 text-sky-600 rounded-lg shadow-md hover:shadow-lg hover:bg-sky-50 transition-all duration-300">
				Se connecter
			</a>
		</div>
	</div>
{% endblock %}
